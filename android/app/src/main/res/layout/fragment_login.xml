<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_login_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login">

        <TextView
            android:id="@+id/text_login_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <Button
            android:id="@+id/btn_login_to_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이메일 로그인"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toTopOf="@id/guideline_login_h50p"
            app:layout_constraintBottom_toBottomOf="@id/guideline_login_h50p"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_login_kakao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="카카오 로그인"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/btn_login_to_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_login_label_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{@string/app_name+"가 처음이신가요?"}'
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toStartOf="@id/text_login_to_signup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="균열 알리미가 처음이신가요?" />

        <TextView
            android:id="@+id/text_login_to_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textSize="18sp"
            android:textColor="@color/palette_1_dark"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/text_login_label_signup"
            app:layout_constraintBottom_toBottomOf="@id/text_login_label_signup"
            app:layout_constraintStart_toEndOf="@id/text_login_label_signup"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_login_h50p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
